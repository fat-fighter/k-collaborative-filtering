\newcommand{\makeheader}[2]{
    {\sffamily\Large #1}

    \vspace{2mm}
    {\fontfamily{qag}\selectfont\Huge #2}

    \def\bottomtitlebar{\vskip .1in\vskip-\parskip\hrule height1pt\vskip.09in}

    \vbox{%
        \hsize\textwidth\linewidth\hsize
        \phantom{\hspace{\textwidth}}
        \bottomtitlebar%
    }
}

